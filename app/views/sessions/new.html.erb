<% provide(:title, "Log in") %>

<section id="login">
    <div class="control-width">
        <div class="control-width-inner">
            <h1>Log in</h1>
            <p>Don't have an account? <%= link_to "Sign up now!", signup_path %></p>

            <%= form_for(:session, url: login_path) do |f| %>
                <%= f.label :email %>
                <%= f.email_field :email, class: 'form-control' %>

                <%= f.label :password %>
                <%= link_to " (forgot password)", new_password_reset_path, class: "pass-reset-link" %>
                <%= f.password_field :password, class: 'form-control' %>

                <%= f.label :remember_me, class: "checkbox inline" do %>
                    <%= f.check_box :remember_me %>
                    <span class="remember-me">Remember me on this computer.</span>
                <% end %>

                <%= f.submit "Log in", class: "btn btn-primary" %>
            <% end %>
        </div>
    </div>
</section>
