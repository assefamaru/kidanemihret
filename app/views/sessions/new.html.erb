<% provide(:title, "Log in") %>

<div class="auth-form">
    <h1>Log in</h1>

    <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email, class: "af-label" %>
        <%= f.email_field :email, class: "form-control af-input", autocomplete: "off" %>

        <%= f.label :password, class: "af-label" %>
        <%= f.password_field :password, class: "form-control af-input" %>

        <div class="af-container">
            <%= f.label :remember_me, class: "custom-control custom-checkbox" do %>
                <%= f.check_box :remember_me, class: "custom-control-input" %>
                <span class="custom-control-label">Remember me</span>
            <% end %>

            <%= link_to "Forgot password?", new_password_reset_path, id: "af-forgot-pass" %>
        </div>

        <%= f.submit "Submit", class: "btn btn-primary", id: "af-submit" %>
    <% end %>

    <p>Are you a new user? <%= link_to "Sign up now!", signup_path, class: "auth-form-link" %></p>
</div>
