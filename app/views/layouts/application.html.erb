<%= spaceless do %>
<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <title><%= full_title(yield(:title)) %></title>
    <meta name="description" content="Hamere Noah Kidane Mihret Ethiopian Orthodox Tewahedo Church serves the Orthodox Christian community of Kitchener-Waterloo in Ontario, Canada. We welcome you in the name of the Father, the Son, and the Holy Spirit, One God, Amen.">
    <meta name="author" content="@assefamaru">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://kit.fontawesome.com/a8eeaad789.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <%= render 'partials/header' %>
    <%= render 'partials/sidebar' %>

    <div class="alert-tag-container">
        <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= "#{message_type}" %> alert-dismissible fade show">
                <% if "#{message_type}" == "success" %>
                    <strong>Success!</strong> <%= message %>
                <% elsif "#{message_type}" == "warning" %>
                    <strong>Pending!</strong> <%= message %>
                <% elsif "#{message_type}" == "danger" %>
                    <strong>Error!</strong> <%= message %>
                <% end %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        <% end %>
    </div>
    
    <div class="content-height">
      <%= yield %>
    </div>
    <%= render 'partials/footer' %>
    <script type="text/javascript">$(function(){$('[data-toggle="popover"]').popover()});</script>
  </body>
</html>
<% end %>
